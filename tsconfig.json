{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "public",
    "rootDir":"src",
    "module": "es2015",
    "target": "esnext",
    "lib": ["es2015", "es2016", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "public",
    ".cache"
  ]
}
